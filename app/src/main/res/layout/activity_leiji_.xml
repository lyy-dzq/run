<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".leiji_Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="累积公里数"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/zhuce_bj"/>
    <com.llw.run.CircleScaleView
        android:id="@+id/circleScaleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        app:circleWidth="24dp"
        app:firstColor="#65cff6"
        app:radius="100dp"
        app:secondColor="#a286da" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="#65cff6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自由跑"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="#a286da"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漫跑"/>
    </LinearLayout>
    <View
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#090808"/>
    //具体信息
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="总公里数" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginLeft="155dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0公里"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="自由跑" />
            <TextView
                android:id="@+id/total1"
                android:text="0公里"
                android:textSize="20dp"
                android:layout_marginLeft="155dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:text="漫跑" />
            <TextView
                android:id="@+id/total2"
                android:text="0公里"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>