<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--磨砂头像-->
    <RelativeLayout

        android:layout_below="@+id/toolbar_fragment_personal"
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/mz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/h_back"
            android:layout_marginBottom="15dp"
            android:text="张三"/>

    </RelativeLayout>

    //累积公里和获得勋章
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@drawable/back"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/leiji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="累积公里"/>
            <TextView
                android:id="@+id/lanse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@color/zhuce_bj"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/xunz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="勋章数量"/>
            <TextView
                android:id="@+id/hongse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="35dp"
                android:textColor="@color/denglu_bj"
                android:text="0"/>

        </LinearLayout>
    </LinearLayout>



    <!--子项-->
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/back"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/geren"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_xxi" />
            <TextView
                android:text="个人信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:src="@drawable/youjiantou"
                android:layout_height="30dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#090808"/>
        <LinearLayout
            android:id="@+id/paobu"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_jl"
                android:layout_width="50dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="跑步记录"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:src="@drawable/youjiantou"
                android:layout_height="30dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#090808"/>
        <LinearLayout
            android:id="@+id/shezhi"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_sz"
                android:layout_width="50dp"
                android:layout_height="40dp" />
            <TextView
                android:text="设置"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:src="@drawable/youjiantou"
                android:layout_height="30dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#090808"/>





    </LinearLayout>




</LinearLayout>
